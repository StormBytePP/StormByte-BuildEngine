add_custom_command(
	OUTPUT @_CMAKE_OUTPUT_LIBRARIES@
	COMMAND @ENV_CMAKE_SILENT_COMMAND@ --build @_CMAKE_BUILD_DIR@ --target install
	WORKING_DIRECTORY "@_CMAKE_BUILD_DIR@"
	COMMENT "Installing @_CMAKE_COMPONENT_TITLE@"
	DEPENDS @_CMAKE_STAGE_BUILD@
)

add_custom_target(
	@_CMAKE_STAGE_INSTALL@
	DEPENDS @_CMAKE_OUTPUT_LIBRARIES@
)

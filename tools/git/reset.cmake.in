execute_process(
	COMMAND @ENV_GIT_SILENT_COMMAND@ reset --hard
	COMMAND @ENV_GIT_SILENT_COMMAND@ clean -fd
	WORKING_DIRECTORY @GIT_REPO@
	RESULT_VARIABLE GIT_RESULT
	OUTPUT_VARIABLE GIT_OUT
	ERROR_VARIABLE GIT_ERROROR
)

if(NOT GIT_RESULT EQUAL 0)
	message(FATAL_ERROR "Git patch failed (exit ${GIT_RESULT}). See error output above for details.")
endif()